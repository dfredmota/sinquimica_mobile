<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="7dp"
        android:paddingTop="3dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_usuario_msg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="1dp"
            android:src="@drawable/ic_person_white_24dp"
            android:layout_marginLeft="12dp"
            app:civ_border_color="@color/cinzaClaro"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/foto_usuario_msg"
            android:layout_toEndOf="@+id/foto_usuario_msg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/data_mensagem"
            android:textColor="@color/verdeClaro"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/mensagem"
            android:layout_alignStart="@+id/mensagem" />


    </RelativeLayout>
</android.support.v7.widget.CardView>